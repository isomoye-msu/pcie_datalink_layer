CAPI=2:
name: fusesoc:pcie:phy_scrambler:1.0.0
description: pcie physical layer scrambler block

filesets:
  rtl:
    files:
      - byte_scramble.sv
      - gen3_byte_scramble.sv
      - scrambler.sv
      - gen1_scramble.sv
      - gen3_scramble.sv
    file_type: systemVerilogSource
    depend:
      - fusesoc:pcie:packages
      - fusesoc:pcie:axis
      - fusesoc:pcie:lint


targets:
  default:
    flow: sim
    flow_options:
      tool : icarus
      iverilog_options:
        - -g2012 -DCOCOTB_SIM # Use SystemVerilog-2012
      cocotb_module : test_ltssm_configuration
      timescale: 1ns/1ns
    filesets : [rtl]
    toplevel : [scrambler]
  
  sim:
    flow: sim
    flow_options:
      tool : verilator
      cocotb_module : test_ltssm_configuration
      timescale: 1ns/1ns
      verilator_options:
        - --trace-fst
        - waiver.vlt
    filesets : [rtl]
    toplevel : [scrambler]

  verilate:
    flow: sim
    flow_options:
      tool : verilator
      cocotb_module : test_ltssm_configuration
      timescale: 1ns/1ns
      verilator_options:
        - --trace-fst
        - waiver.vlt
    filesets : [rtl]
    toplevel : [scrambler]

  synth:
    default_tool : vivado
    filesets : [rtl]
    tools:
      vivado:
        part : xc7a100tcsg324-1
    toplevel : scrambler